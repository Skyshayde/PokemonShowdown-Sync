{
    "name": "PokemonShowdown-Sync",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Sync teams for Pokemon Showdown",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "http://play.pokemonshowdown.com/",
        "https://play.pokemonshowdown.com/",
        "storage"
    ],
    "content_scripts": [{
        "matches": [
            "http://play.pokemonshowdown.com/*",
            "https://play.pokemonshowdown.com/*"
        ],
        "js": [
            "md5.min.js",
            "src/scripts/script.js",
            "src/scripts/util.js"
        ]
    }],
    "web_accessible_resources": ["src/inject/inject.js", "md5.min.js"]
}
